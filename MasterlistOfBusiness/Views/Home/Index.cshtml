@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-section {
        background-image: url('https://i.ebayimg.com/images/g/THcAAOSwsFJeF6he/s-l1200.jpg');
        background-size: cover;
        background-position: center;
        padding: 100px 20px;
        color: white;
        text-shadow: 1px 1px 2px #000;
    }

    .hero-section h1 {
        font-size: 3rem;
        margin-bottom: 20px;
    }

    .hero-section p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .quote {
        font-style: italic;
        margin-top: 40px;
        font-size: 1.3rem;
        border-left: 4px solid #ffffff99;
        padding-left: 15px;
    }

    a {
        color: #ffe082;
        text-decoration: underline;
    }
</style>

<div class="text-center hero-section">
    <h1 class="display-4">Welcome to YOUR Business</h1>
    <p>Master YOUR own list of business and sell things on the Internet</p>

    <div class="quote mt-5">
        “Sell things on the Internet.” — Adam Adam
    </div>
</div>
